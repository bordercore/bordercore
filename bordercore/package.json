        "dev": "webpack --mode development --watch",
        "dev-jenkins": "webpack --mode development",
        "dev-analyzer": "ANALYZER=1 webpack --mode development",
        "dev-css": "WEBPACK_CSS_ONLY=1 webpack --mode development",
        "build": "webpack"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "css-loader": "^5.0.0",
        "eslint": "^8.36.0",
