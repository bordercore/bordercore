        "mini-css-extract-plugin": "^1.0.0",
        "sass": "^1.27.0",
        "sass-loader": "^10.0.3",
        "style-loader": "^3.3.1",
        "stylelint": "^13.13.1",
        "stylelint-config-idiomatic-order": "^8.1.0",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-order": "^4.1.0",
        "stylelint-webpack-plugin": "^2.4.0",
        "vue-loader": "^17.0.1",
        "webpack": "^5.76.0",
        "webpack-bundle-analyzer": "^4.5.0",
