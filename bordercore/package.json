        "@popperjs/core": "^2.11.5",
        "animate.css": "^4.1.1",
        "axios": "^0.21.4",
        "babel-loader": "^8.2.3",
        "babel-plugin-prismjs": "^2.1.0",
        "bootstrap": "^5.2.0",
        "buefy": "^0.9.19",
        "chart.js": "^3.7.0",
        "compression-webpack-plugin": "^6.0.2",
        "date-fns": "^1.9.0",
        "hotkeys-js": "^3.8.7",
        "http-status-codes": "^2.2.0",
        "markdown-it": "^12.3.2",
        "mathjax-full": "^3.1.2",
        "perfect-scrollbar": "^1.5.0",
