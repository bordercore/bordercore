# Defaults for the celeryd daemon.  Place this in /etc/default/

# Name of nodes to start, here we have a single node
CELERYD_NODES="worker"
# or we could have three nodes:
#CELERYD_NODES="w1 w2 w3"

# Where to chdir at start
CELERYD_CHDIR="/home/www/htdocs/bordercore-django"

# Python interpreter from environment.
ENV_PYTHON="$CELERYD_CHDIR/env/bin/python"

# Absolute path to celery program
CELERY_BIN="$CELERYD_CHDIR/env/bin/celery"

# How to call "manage.py celeryd_multi"
#CELERYD_MULTI="$ENV_PYTHON $CELERYD_CHDIR/bordercore/manage.py celeryd_multi"

# How to call "manage.py celeryctl"
CELERYCTL="$ENV_PYTHON $CELERYD_CHDIR/manage.py celeryctl"

CELERY_APP="bordercore"

# Extra arguments to celeryd
CELERYD_OPTS="--time-limit=300 --concurrency=4"

# Create the default directories, if necessary
CELERY_CREATE_DIRS=1

# %n will be replaced with the nodename.
CELERYD_LOG_FILE="/var/log/celery/%n.log"
CELERYD_PID_FILE="/var/run/celery/%n.pid"

# Workers should run as an unprivileged user.
CELERYD_USER="celery"
CELERYD_GROUP="celery"

# Name of the projects settings module.
export DJANGO_SETTINGS_MODULE="bordercore.config.settings.prod"

export PYTHONPATH="/home/www/htdocs/bordercore-django/bordercore:/home/www/htdocs/bordercore-django/bordercore/bordercore"
