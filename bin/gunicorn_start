#!/bin/bash

# Based on http://michal.karzynski.pl/blog/2013/06/09/django-nginx-gunicorn-virtualenv-supervisor/

NAME="django_app"
DJANGODIR=/var/www/django
HOST=127.0.0.1:9000
USER=www-data
GROUP=www-data
NUM_WORKERS=3
DJANGO_SETTINGS_MODULE=config.settings.prod
DJANGO_WSGI_MODULE=config.wsgi
PYTHONPATH=/var/www/django/bordercore

echo "Starting $NAME as `whoami`"

# Activate the virtual environment
source $DJANGODIR/env/bin/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$PYTHONPATH

# Read environment variables
source /var/www/.env

# Install Python packages
pip install -r $PYTHONPATH/requirements/prod.txt

# Start your Django Unicorn
# Programs meant to be run under supervisor should not daemonize themselves (do not use --daemon)
exec gunicorn ${DJANGO_WSGI_MODULE}:application \
  --name $NAME \
  --workers $NUM_WORKERS \
  --pythonpath $PYTHONPATH/bordercore \
  --user=$USER \
  --group=$GROUP \
  --bind=$HOST \
  --log-level=info \
  --log-file=- \
  --worker-tmp-dir=/dev/shm
